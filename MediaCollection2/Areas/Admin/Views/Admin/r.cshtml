@model List<MediaCollection2.Models.Admin.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2> Add or remove users from this role</h2>
        </div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <div>
                    @foreach (var user in Model)
                    {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@user.userId" />
                        <input type="hidden" asp-for="@user.UserName" />
                        <input asp-for="@user.IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@user.IsSelected">
                            @user.UserName
                        </label>
                    </div>
                    }

                </div>
            }
            else
            {
                <h3> There are no users yet </h3>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="Edit" asp-route-roleId="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>