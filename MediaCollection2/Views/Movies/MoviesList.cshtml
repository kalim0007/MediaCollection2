@model IEnumerable<MediaCollection2.Models.Movies.ListMovieViewModel>

@{
    ViewData["Title"] = "MoviesList";
}

<h1>MoviesList</h1>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
               <button class=" btn btn-danger" asp-action="Create">  <i class="far fa-plus-square"></i>Employee</button> 
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td><p>There Are No Movies Yet</p></td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-marker fa-lg"></i>Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-info-circle"></i>Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="text-danger ml" onclick="return confirm('Are you sure you want to delete this Movie?')"><i class=" fa fa-trash-alt fa-lg"></i>Delete</a>

                    </td>
                </tr>
            }
        }

    </tbody>
</table>
