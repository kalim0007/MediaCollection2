@model MediaCollection2.Models.SeriesModels.SeasonDetailViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_SerieLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Serie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titel)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titel)
        </dd>
    </dl>
</div>
<div>
    @foreach (var episode in Model.Episodes)
    {
        <table>
            <tr>
                <th><label asp-for="@episode.Nr"></label></th>
                <th><label asp-for="@episode.Titel"></label></th>
            </tr>
            <tr>
                <td>@episode.Nr</td>
                <td>@episode.Titel</td>
            </tr>
        </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

