@model MediaCollection2.Models.SeriesModels.SeasonViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_SerieLayout.cshtml";
    var photoPath = "~/Images/" + (Model.PhotoPath ?? "download.jfif");
    var lastSeriID = Model.SerieID;
}

<h2>Edit</h2>

<h4>Season</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (!photoPath.Contains("download.jfif"))
        {
            <img src="@photoPath" class="IndexImg" asp-append-version="true" />
        }
    <form enctype="multipart/form-data" asp-action="Edit" asp-route-lastSerieID="@lastSeriID">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Titel" class="control-label"></label>
            <input asp-for="Titel" class="form-control" />
            <span asp-validation-for="Titel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="YoutubeTrailer" class="control-label"></label>
            <input asp-for="YoutubeTrailer" class="form-control" />
            <span asp-validation-for="YoutubeTrailer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nr" class="control-label"></label>
            <input asp-for="Nr" class="form-control" />
            <span asp-validation-for="Nr" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label"> Choose File...</label>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Serie" class="control-label"></label>
            <select asp-for="SerieID" class="form-control" asp-items="ViewBag.SerieID"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

