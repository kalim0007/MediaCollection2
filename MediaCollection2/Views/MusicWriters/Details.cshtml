@model MediaCollection2.Models.MusicModels.MusicWriter.MusicWriterViewModel

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/Images/" + (Model.PhotoPath ?? "download.jfif");
    Layout = "~/Views/Shared/_MusicLayout.cshtml";
}

    <table class="table">
        <tr></tr>
        <tr>
            <td colspan="4" style="text-align:center">
                <img class="center" width="200" height="200" src="@photoPath" asp-append-version="true" />
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <h1>@Html.DisplayFor(model => model.Name)</h1>
            </td>
            <th style="vertical-align: middle">
                Date Of Birth: @Html.DisplayFor(model => model.DateOfBirth)
            </th>
        </tr>
    </table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
