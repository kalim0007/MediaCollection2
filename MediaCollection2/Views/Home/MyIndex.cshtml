@model MediaCollection2.Models.Home.MyIndexViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
@{
    ViewData["Title"] = "MyIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Home</title>
</head>
<body>
    @if (Model.Movies != null)
    {
        <div >
            @foreach (var movie in Model.Movies)
            {
                var photoPath = "~/Images/" + (movie.PhotoPath ?? "download.jfif");

                <>
                   
                    <td colspan="3"><a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.ID"> <img src="@photoPath" asp-append-version="true"  class="TopImg" /></a> </td>
                </>
                <tr>
                    <td>
                        <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.ID">@movie.Titel</a>
                    </td>
                    <td>@movie.Lenght</td>
                    @if (@movie.Rating != 0)
                    {
                        <td>@movie.Rating</td>

                    }
                    else
                    {
                        <td>No Rating </td>
                    }
