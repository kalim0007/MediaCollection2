@model MediaCollection2.Models.MusicModels.MusicAlbum.MusicAlbumViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MusicLayout.cshtml";
    var photoPath = "~/Images/" + (Model.PhotoPath ?? "download.jfif");
}

<h2>Edit</h2>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (!photoPath.Contains("download.jfif"))
        {
            <img src="@photoPath" class="IndexImg" asp-append-version="true" />
        }
    <form enctype="multipart/form-data" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Naam" class="control-label"></label>
            <input asp-for="Naam" class="form-control" />
            <span asp-validation-for="Naam" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Photo" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" placeholder="@photoPath" />
                <label class="custom-file-label"> Choose File...</label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

